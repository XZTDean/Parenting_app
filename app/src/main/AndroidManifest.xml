<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.cmpt276.project">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project">
        <activity
            android:name=".UI.ChildrenQueue"
            android:label="Queue"/>
        <activity
            android:name=".UI.flipHistory"
            android:label="History Screen"
            android:parentActivityName=".UI.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Project.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".UI.ChildManagerActivity"
            android:label="@string/config_children"
            android:parentActivityName=".UI.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Project.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".UI.FlipCoinScreen"
            android:label="@string/title_activity_flip_coin_screen"
            android:theme="@style/Theme.Project.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".UI.CoinFlipScreen"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".UI.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Project.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.PopEndScreen"
            android:parentActivityName=".UI.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme"
            tools:ignore="LockedOrientationActivity"></activity>
        <activity
            android:label="Timeout Timer"
            android:parentActivityName=".UI.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Project.NoActionBar"
            android:name=".UI.TimeoutTimerUI"
            android:launchMode="singleTop" />
        <activity
            android:label="Add Photo"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"
            android:parentActivityName=".UI.ChildManagerActivity"
            android:theme="@style/Theme.Project.NoActionBar"
            android:name=".UI.ChildrenPhotoActivity"
            android:launchMode="singleTop" />
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>