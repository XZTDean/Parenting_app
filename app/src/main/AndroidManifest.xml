<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.project">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project">
        <activity android:name=".UI.flipHistory"></activity>
        <activity
            android:name=".UI.ChildManagerActivity"
            android:label="@string/config_children"
            android:parentActivityName=".UI.MainActivity"
            android:theme="@style/Theme.Project.NoActionBar"
            />
        <activity
            android:name=".UI.FlipCoinScreen"
            android:label="@string/title_activity_flip_coin_screen"
            android:theme="@style/Theme.Project.NoActionBar" />
        <activity android:name=".UI.CoinFlipScreen"></activity>
        <activity android:name=".UI.MainActivity"
            android:theme="@style/Theme.Project.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.PopEndScreen"
            android:parentActivityName=".UI.MainActivity"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity
            android:name=".UI.TimeoutTimerUI"
            android:launchMode="singleTop" />
    </application>

</manifest>