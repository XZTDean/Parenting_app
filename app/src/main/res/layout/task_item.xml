<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/task_name"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:layout_marginStart="9dp"
        android:background="#992C2C2C"
        android:textColor="#E81647"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/child_icon_task"
        app:layout_constraintTop_toTopOf="@+id/child_icon_task" />

    <LinearLayout
        android:id="@+id/next_child_name_display"
        android:layout_width="374dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:background="#992C2C2C"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/task_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/next_child"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/task_child"
            android:layout_width="345dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/child_icon_task"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>